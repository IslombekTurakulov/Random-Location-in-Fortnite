<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:gravity="center"
    android:background="#E8EDE7"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <FrameLayout
        android:id="@+id/frameLayout"
        android:layout_width="wrap_content"
        android:layout_height="410dp">

        <com.iuturakulov.rndlocationinfortnite.ZoomClass
            android:id="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_height="410dp"
            android:contentDescription="@string/fortnite_map"
            android:src="@drawable/map_fortnite" />

        <ImageView
            android:id="@+id/location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleType="centerCrop"
            android:layout_gravity="center"
            android:contentDescription="@string/location_destination"
            android:src="@drawable/baseline_location_on"
            app:srcCompat="@drawable/baseline_location_on"/>
    </FrameLayout>

    <Button
        android:id="@+id/get_random_location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:gravity="center_vertical"
        android:hint="@string/get_random_location"
        android:text="@string/get_random_location" />
</LinearLayout>